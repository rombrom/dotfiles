{
  "$schema": "https://json.schemastore.org/stylelintrc.json",
  "customSyntax": "postcss-html",
  "extends": ["stylelint-config-standard"],
  "overrides": [
    {
      "extends": ["stylelint-config-standard-scss"],
      "files": ["*.scss", "**/*.scss"],
      "customSyntax": "postcss-scss"
    },
    {
      "files": ["*.html", "**/*.html"],
      "customSyntax": "postcss-html"
    }
  ]
}
